{
  "name": "textbox-generator",
  "version": "1.1.9",
  "private": true,
  "scripts": {
    "dev": "node --watch server/index.js",
    "start": "node server/index.js",
    "test": "npm run test:textbox:unit && npm run test:textbox:e2e",
    "test:textbox:unit": "vitest --config apps/TextBoxGenerator/vitest.config.js --passWithNoTests",
    "test:textbox:e2e": "playwright test --config apps/TextBoxGenerator/playwright.config.js --pass-with-no-tests",
    "test:textbox": "npm run test:textbox:unit && npm run test:textbox:e2e"
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "fastify": "^5.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "jsdom": "^26.0.0",
    "serve": "^14.2.4",
    "vitest": "^3.2.4"
  }
}
